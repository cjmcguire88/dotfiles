# cheatsheet
# rofi
super + grave
    rofi -show drun

# screenshot
super + F6
    scrot

# notification center
super + @space
    kill -s USR1 $(pidof deadd-notification-center)

# open browser
super + shift + b
    chromium

# open tor browser
super + alt + b
	torbrowser-launcher

# open file manager
super + shift + f
	pcmanfm

# open pamac 
super + shift + u
	pamac-manager

# open steam 
super + shift + g
	prime-run /usr/bin/steam-runtime %U

# open lutris
super + alt + g
	lutris

# open discord
super + shift + d
	discord

# open task manager
super + F1
	st btop

# open nvtop
super + F3
	st nvtop

# open kodi
super + shift + k
	kodi

# open email
super + shift + m
    mailspring

# edex ui  (lol)
super + shift + h
    edex-ui

# qutebrowser
super + b
    qutebrowser
