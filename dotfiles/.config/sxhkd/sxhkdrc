# powermenu
super + p
    ~/.config/rofi/powermenu/powermenu.sh

# poweroff
super + ctrl + p
	st poweroff

# reboot
super + ctrl + o
	st reboot

# hibernate
super + ctrl + i
    systemctl hibernate

# kill xserver
super + ctrl + u
    pkill X

#  ___         _               _  _     _   _
# / __|_  _ __| |_ ___ _ __   | || |___| |_| |_____ _  _ ___
# \__ \ || (_-<  _/ -_) '  \  | __ / _ \  _| / / -_) || (_-<
